# http://guides.rubygems.org/command-reference/#gem-environment
# Gem config (YAML)
---
# gem: is used to set default arguments for all commands
gem: --no-document

# Verbosity of gem command
:verbose: true

# Sources where to look for gems
:sources:
  - https://rubygems.org

# Print backtrace when error encountered
:backtrace: true

# Concurrently download gems
:concurrent_downloads: 10

# Enable/disable automatic updating of repository metadata
# :update_sources: true
